<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_smoke"
    android:padding="15dp">

    <TextView
        android:id="@+id/txvEditParentInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Parent Info"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:paddingTop="7dp"/>

    <TextView
        android:id="@+id/txvCurrentExam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Exam"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16dp"
        android:paddingTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/txvAbdomen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abdomen"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:paddingTop="15dp"/>
        <TextView
            android:id="@+id/txvLung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lung"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:paddingTop="15dp"/>
        <TextView
            android:id="@+id/txvOb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OB"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:paddingTop="15dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txvSavedExam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saved Exam"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:paddingTop="15dp"/>

    <TextView
        android:id="@+id/txvSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:paddingTop="15dp"/>

    <TextView
        android:id="@+id/txvAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:paddingTop="15dp" />

</LinearLayout>